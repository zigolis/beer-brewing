<%- include('partials/_header', { title: 'Create New Recipe' }) %>

  <div class="container">
    <div class="page-header">
      <h2>Create New Recipe</h2>
      <a href="/recipes" class="btn secondary">Back to Recipes</a>
    </div>


    <form id="create-recipe-form" action="/recipes" method="POST" autocomplete="off">
      <input type="hidden" name="version" value="1">
  
      <!-- General Information -->
      <section class="recipe-section card">
        <h2>General Information</h2>
        <div class="form-group">
          <div class="form-group">
            <label for="recipe-name">Recipe Name*</label>
            <input type="text" id="recipe-name" name="name" required>
          </div>

          <div class="form-group">
            <label for="recipe-brewer">Brewer</label>
            <input type="text" id="recipe-brewer" name="brewer">
          </div>

          <div class="form-group">
            <label for="general-type">Type</label>
            <select name="type" id="general-type" required>
              <option value="">Select Type</option>
              <option value="All Grain">All Grain</option>
              <option value="Extract">Extract</option>
              <option value="Partial Mash">Partial Mash</option>
            </select>
          </div>

          <div class="form-group">
            <label for="batch_size">Batch Size (L)</label>
            <input name="batch_size" id="batch_size" type="number" step="1" min="5" required>
          </div>

          <div class="form-group">
            <label for="boil_size">Boil Size (L)</label>
            <input name="boil_size" id="boil_size" type="number" step="1" min="5" required>
          </div>

          <div class="form-group">
            <label for="boil_time">Boil Time (Min)</label>
            <input name="boil_time" id="boil_time" type="number" step="5" min="20" required>
          </div>

          <div class="form-group">
            <label for="efficiency">Efficiency (%)</label>
            <input name="efficiency" id="efficiency" type="number" step="1" min="50" max="100">
          </div>

          <div class="form-group">
            <label for="og">OG</label>
            <input name="og" id="og" type="number" step="1" min="1000" required>
          </div>

          <div class="form-group">
            <label for="fg">FG</label>
            <input name="fg" id="fg" type="number" step="1" min="1000" required>
          </div>

          <div class="form-group">
            <label for="primary_temp">Primary Temp</label>
            <input name="primary_temp" id="primary_temp" type="number" step="1" min="10">
          </div>

          <div class="form-group">
            <label for="notes">Notes</label>
            <textarea name="notes" id="notes"></textarea>
          </div>
        </div>
      </section>
  
      <!-- Style -->
      <div class="card">
        <h2>Style</h2>
        <div class="form-row">
          <input name="style[name]" required placeholder="Style Name">
          <input name="style[category]" placeholder="Category">
        </div>
      </div>
  
      <!-- Fermentables -->
      <div class="card">
        <h2>Fermentables</h2>
        <div id="fermentables-list"></div>
        <button type="button" class="btn" id="add-fermentable">Add Fermentable</button>
      </div>
  
      <!-- Hops -->
      <div class="card">
        <h2>Hops</h2>
        <div id="hops-list"></div>
        <button type="button" class="btn" id="add-hop">Add Hop</button>
      </div>
  
      <!-- Yeasts -->
      <div class="card">
        <h2>Yeasts</h2>
        <div id="yeasts-list"></div>
        <button type="button" class="btn" id="add-yeast">Add Yeast</button>
      </div>
  
      <!-- Mash Steps -->
      <div class="card">
        <h2>Mash Steps</h2>
        <input name="mash[grain_temp]" type="number" step="0.1" placeholder="Grain Temp (Â°C)">
        <div id="mash-steps-list"></div>
        <button type="button" class="btn" id="add-mash-step">Add Mash Step</button>
      </div>
  
      <button type="submit" class="btn primary">Create Recipe</button>
    </form>
  

  </div>

  <script src="/js/create-recipe.js"></script>

  <%- include('partials/_footer') %>