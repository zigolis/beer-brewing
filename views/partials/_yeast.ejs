<section id="yeasts-section" class="card">
    <h2>Yeasts</h2>
    <div class="card-content">
        <% if (recipe.yeasts && recipe.yeasts.length > 0) { %>
            <div id="yeast-list">
                <div class="yeast-group">
                    <% recipe.yeasts.forEach(yeast => { %>
                        <div class="yeast-card">
                            <div class="type-indicator" style="background-color: <%= yeastTypeToColor(yeast.TYPE) %>;"></div>
                            <div class="yeast-content">
                                <div class="yeast-name"><%= yeast.NAME %></div>
                                <div class="yeast-details">
                                    <% if (yeast.type) { %>
                                        <span class="type"><%= yeast.TYPE %></span>
                                    <% } %>
                                    <% if (yeast.FORM) { %>
                                        <span class="form"><%= yeast.FORM %></span>
                                    <% } %>
                                    <% if (yeast.AMOUNT) { %>
                                        <span class="attenuation"><%= yeast.AMOUNT %></span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } else { %>
            <div class="empty-state">
                <p>No yeasts added to this recipe.</p>
            </div>
        <% } %>
    </div>
</section>
