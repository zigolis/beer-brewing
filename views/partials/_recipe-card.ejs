<div class="recipe-card">
    <div class="recipe-header">
        <h3><%= recipe.name %></h3>
        <div class="recipe-meta">
            <% if (recipe.brewer) { %><span class="brewer"><%= recipe.brewer %></span><% } %>
            <% if (recipe.style) { %><span class="style"><%= recipe.style %></span><% } %>
        </div>
    </div>

    <div class="recipe-stats">
        <% if (recipe.abv) { %><span class="stat">ABV: <%= recipe.abv %>%</span><% } %>
        <% if (recipe.ibu) { %><span class="stat">IBU: <%= recipe.ibu %></span><% } %>
        <% if (recipe.batchSize) { %><span class="stat"><%= recipe.batchSize %> L</span><% } %>
    </div>
    
    <div class="recipe-actions">
        <a href="/recipes/<%= recipe._id %>" class="btn secondary">View</a>
        <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" class="delete-form">
            <button type="submit" class="btn danger" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</button>
        </form>
    </div>
</div>



<div class="recipe-card">
    <div class="recipe-header">
        <h3 class="recipe-name"><%= recipe.name %></h3>
        <div class="recipe-meta">
            <% if (recipe.brewer) { %>
                <span class="recipe-brewer"><i class="material-icons">person</i> <%= recipe.brewer %></span>
            <% } %>
            <% if (recipe.style) { %>
                <span class="recipe-style"><i class="material-icons">style</i> <%= recipe.style %></span>
            <% } %>
        </div>
    </div>
    <div class="recipe-stats">
        <% if (recipe.abv) { %>
            <div class="stat-item">
                <span class="stat-label">ABV</span>
                <span class="stat-value"><%= recipe.abv.toFixed(1) %>%</span>
            </div>
        <% } %>
        <% if (recipe.ibu) { %>
            <div class="stat-item">
                <span class="stat-label">IBU</span>
                <span class="stat-value"><%= recipe.ibu.toFixed(0) %></span>
            </div>
        <% } %>
        <% if (recipe.color) { %>
            <div class="stat-item">
                <span class="stat-label">Color</span>
                <span class="stat-value"><%= recipe.color.toFixed(1) %> EBC</span>
            </div>
        <% } %>
        <% if (recipe.batchSize) { %>
            <div class="stat-item">
                <span class="stat-label">Batch</span>
                <span class="stat-value"><%= recipe.batchSize.toFixed(1) %> L</span>
            </div>
        <% } %>
    </div>
    <div class="recipe-preview">
        <% if (recipe.fermentables && recipe.fermentables.length > 0) { %>
            <div class="preview-item">
                <i class="material-icons">grain</i>
                <span><%= recipe.fermentables.length %> fermentable<%= recipe.fermentables.length > 1 ? 's' : '' %></span>
            </div>
        <% } %>
        <% if (recipe.hops && recipe.hops.length > 0) { %>
            <div class="preview-item">
                <i class="material-icons">eco</i>
                <span><%= recipe.hops.length %> hop<%= recipe.hops.length > 1 ? 's' : '' %></span>
            </div>
        <% } %>
        <% if (recipe.yeasts && recipe.yeasts.length > 0) { %>
            <div class="preview-item">
                <i class="material-icons">bubble_chart</i>
                <span><%= recipe.yeasts.length %> yeast<%= recipe.yeasts.length > 1 ? 's' : '' %></span>
            </div>
        <% } %>
    </div>
    <div class="recipe-actions">
        <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">View Recipe</a>
        <a href="/recipes/<%= recipe._id %>/edit" class="btn btn-secondary">Edit</a>
        <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" class="delete-form">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</button>
        </form>
    </div>
</div>
