<section id="stats-section" class="card">
    <h2>Stats</h2>
    <div class="card-content">
        <div id="stats" class="stats-grid">
            <% if (recipe.batch_size) { %>
                <div class="stat-card">
                    <div class="stat-indicator" style="background-color: var(--volume-color);"></div>
                    <div class="stat-content">
                        <div class="stat-name">Batch Size</div>
                        <div class="stat-value"><%= recipe.batch_size %> L</div>
                    </div>
                </div>
            <% } %>
            
            <% if (recipe.boil_size) { %>
                <div class="stat-card">
                    <div class="stat-indicator" style="background-color: var(--volume-color);"></div>
                    <div class="stat-content">
                        <div class="stat-name">Boil Size</div>
                        <div class="stat-value"><%= recipe.boil_size %> L</div>
                    </div>
                </div>
            <% } %>
            
            <% if (recipe.efficiency) { %>
                <div class="stat-card">
                    <div class="stat-indicator" style="background-color: var(--process-color);"></div>
                    <div class="stat-content">
                        <div class="stat-name">Efficiency</div>
                        <div class="stat-value"><%= recipe.efficiency %>%</div>
                    </div>
                </div>
            <% } %>
            
            <% if (recipe.og) { %>
                <div class="stat-card">
                    <div class="stat-indicator" style="background-color: var(--gravity-color);"></div>
                    <div class="stat-content">
                        <div class="stat-name">OG</div>
                        <div class="stat-value"><%= recipe.og %></div>
                    </div>
                </div>
            <% } %>
            
            <% if (recipe.fg) { %>
                <div class="stat-card">
                    <div class="stat-indicator" style="background-color: var(--gravity-color);"></div>
                    <div class="stat-content">
                        <div class="stat-name">FG</div>
                        <div class="stat-value"><%= recipe.fg %></div>
                    </div>
                </div>
            <% } %>
            
            <% if (recipe.ibu) { %>
                <div class="stat-card">
                    <div class="stat-indicator" style="background-color: var(--results-color);"></div>
                    <div class="stat-content">
                        <div class="stat-name">IBU</div>
                        <div class="stat-value"><%= recipe.ibu %></div>
                    </div>
                </div>
            <% } %>
            
            <% if (recipe.abv) { %>
                <div class="stat-card">
                    <div class="stat-indicator" style="background-color: var(--results-color);"></div>
                    <div class="stat-content">
                        <div class="stat-name">ABV</div>
                        <div class="stat-value"><%= recipe.abv %>%</div>
                    </div>
                </div>
            <% } %>
            
            <% if (recipe.color) { %>
                <div class="stat-card">
                    <div class="stat-indicator" style="background-color: var(--other-color);"></div>
                    <div class="stat-content">
                        <div class="stat-name">Color</div>
                        <div class="stat-value"><%= recipe.color %> EBC</div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>
